<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="template"
            type="com.improve10x.crud.templates.Template" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".templates.BaseAddEditTemplateActivity">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textColor="#070505"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/template_message_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:lines="3"
            android:text="@{template.messageText}"
            tools:text="hello Manoj" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/add_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00BCD4"
            android:text="Add"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00BCD4"
            android:text="Edit"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>
</layout>